{
  "name": "db-mgr",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently \"npm run proxy\" \"npm run dev\"",
    "proxy": "node proxy-server.js",
    "build": "tsc && vite build",
    "start": "NODE_ENV=production node proxy-server.js",
    "container:build": "podman build -f Containerfile -t db-mgr:latest .",
    "container:run": "podman run -d --name db-mgr -p 8080:8080 -v /var/run/docker.sock:/var/run/docker.sock:z db-mgr:latest",
    "container:run:podman": "podman run -d --name db-mgr -p 8080:8080 -v $XDG_RUNTIME_DIR/podman/podman.sock:/var/run/podman.sock:z db-mgr:latest",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@patternfly/react-core": "^6.3.1",
    "@patternfly/react-icons": "^6.3.1",
    "@patternfly/react-table": "^6.3.1",
    "@tanstack/react-query": "^5.0.0",
    "lucide-react": "^0.263.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "express": "^4.18.2",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
